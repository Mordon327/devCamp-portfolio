<%= form_with(model: blog, local: true) do |form| %>
<% if blog.errors.any? %>
  <% blog.errors.full_messages.each do |error| %>
    <%= alert_generator error %>
  <% end %>
<% end %>

<div class="form-group">
  <%= form.label :title %>
  <%= form.text_field :title, id: :blog_title, class: 'form-control', placeholder: 'Your Title Goes Here:' %>
</div>

<div class="form-group">
  <%= form.label :topic_id %>
  <%= form.collection_select(:topic_id, Topic.all, :id, :title, { selected: blog.topic_id, include_blank: true }, class: 'form-control') %>
</div>

<div class="form-group">
  <%= form.label :status, 'Draft' %>
  <%= form.radio_button :status, 'draft' %>

  <%= form.label :status, 'Published' %>
  <%= form.radio_button :status, 'published' %>
</div>

<div class="form-group">
  <%= form.label :body %>
  <%= form.text_area :body, id: :blog_body, class: 'form-control', placeholder: 'What will you blog about today?', rows: 10 %>
</div>

<div class="form-group">
  <%= link_to 'Back', blogs_path , class: 'btn btn-secondary' %>
  <%= form.submit "Submit", class: 'btn btn-primary' %>
</div>
<% end %>
