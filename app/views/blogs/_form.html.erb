<%= form_with(model: blog, local: true) do |form| %>
<% if blog.errors.any? %>
  <% blog.errors.full_messages.each do |error| %>
    <%= js add_gritter(error, title: "Shane Soderstrom Portfolio", sticky: false, time: 3500) %>
  <% end %>
<% end %>

<div class="form-group">
  <%= form.label :title %>
  <%= form.text_field :title, id: :blog_title, class: 'form-control', placeholder: 'Your Title Here' %>
</div>

<div class="form-group">
  <%= form.label :body %>
  <%= form.text_area :body, id: :blog_body, class: 'form-control', placeholder: 'What will you blog today?', rows: 10 %>
</div>

<div class="form-group">
  <%= form.submit "Submit", class: 'btn btn-primary' %>
  <%= link_to 'Back', blogs_path , class: 'btn btn-secondary' %>
</div>
<% end %>
