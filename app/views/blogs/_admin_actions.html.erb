<% if logged_in?(:site_admin) %>
<nav class="breadcrumb blogcrumb">
	<%= link_to blog.status, toggle_status_blog_path(blog), class: 'btn btn-info' %> 		
	<%= link_to fa_icon('pencil-square-o'), edit_blog_path(blog), class: 'btn btn-success' %> 
	<%= link_to fa_icon('trash'), blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
</nav>
<% end %>